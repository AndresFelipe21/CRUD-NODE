<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Imágenes de Unsplash</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light text-center">

    <div class="container py-4">
        <h1 class="mb-4">Imágenes de Unsplash</h1>

        <div class="row">
            <% images.forEach(image => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="<%= image.urls.small %>" class="card-img-top" alt="Imagen de <%= image.alt_description || 'imagen' %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= image.user.name %></h5>
                            <p class="card-text"><%= image.alt_description || 'Sin descripción' %></p>
                            <a href="<%= image.links.html %>" target="_blank" class="btn btn-primary">Ver en Unsplash</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
